{
    "manifest_version": 2,
    "name": "UUID-Gen",
    "version": "1.4",
    "description": "Simple UUID Generator",
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "UUID-Gen",
        "default_icon": {
            "16": "/icons/icon16.png",
            "32": "/icons/icon32.png",
            "192": "/icons/icon192.png",
            "512": "/icons/icon512.png"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "/icons/icon16.png",
        "32": "/icons/icon32.png",
        "192": "/icons/icon192.png",
        "512": "/icons/icon512.png"
    },
    "permissions": [
        "clipboardWrite",
        "contextMenus"
    ]
}